@model RentalForm

@{
    ViewData["Title"] = "Wynajmij " + ViewBag.Car.Name;
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <img src="@ViewBag.Car.ImageUrl" class="card-img-top" alt="@ViewBag.Car.Name">
                <div class="card-body">
                    <h5 class="card-title">@ViewBag.Car.Name</h5>
                    <p class="card-text">@ViewBag.Car.PricePerDay zł/dzień</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h2 class="card-title">Formularz wynajmu</h2>
                    <form asp-controller="RentalForms" asp-action="SubmitForm">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Imię i nazwisko</label>
                            <input asp-for="Name" class="form-control" required>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Adres email</label>
                            <input asp-for="Email" class="form-control" required>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Numer telefonu</label>
                            <input asp-for="Phone" class="form-control" required>
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PickupDate" class="form-label">Data odbioru</label>
                            <input asp-for="PickupDate" class="form-control" required value="@DateTime.Today.ToShortDateString()">
                            <span asp-validation-for="PickupDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="LeavingDate" class="form-label">Data zwrotu</label>
                            <input asp-for="LeavingDate" class="form-control" required value="@DateTime.Today.ToShortDateString()">
                            <span asp-validation-for="LeavingDate" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="Consent" class="form-check-input" type="checkbox" required>
                            <label class="form-check-label">
                                Zgadzam się na warunki wynajmu
                            </label>
                        </div>
                        
                        <input asp-for="CarId" type="hidden" value="@ViewBag.Car.Id" />
                        
                        <button type="submit" class="btn btn-primary">Wyślij formularz</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
