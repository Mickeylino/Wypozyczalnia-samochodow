@{
    ViewData["Title"] = "Kontakt";
}

<section class="pt-5">
    <div class="container">
        <header class="text-center py-5">
            <h1 class="display-4">@ViewData["Title"]</h1>
        </header>

        <div class="row">
            <div class="col-md-6">
                <h2 class="mb-4">Dane kontaktowe</h2>
                <address>
                    <strong>Nazwa firmy</strong><br>
                    ul. Przykładowa 123<br>
                    00-000 Miasto<br>
                    Polska<br>
                    <abbr title="Telefon">Tel:</abbr> (123) 456-7890<br>
                    <abbr title="Email">Email:</abbr> <a href="mailto:info@example.com">info@example.com</a><br>
                </address>
            </div>

            <div class="col-md-6">
                <div class="card border-0 shadow">
                    <img src="https://picsum.photos/id/88/600/400" class="card-img-top" alt="Image">
                    <div class="card-body text-center">
                        <h5 class="card-title mb-3">Skontaktuj się z nami</h5>
                        <p class="card-text">Aby uzyskać więcej informacji na temat naszych usług wynajmu samochodów.</p>
                        <a href="#" class="btn btn-primary mt-3">Skontaktuj się</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

